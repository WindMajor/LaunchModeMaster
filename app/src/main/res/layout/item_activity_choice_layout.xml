<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:clickable="true"
                android:minHeight="56dp"
                android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/choice_activity_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_choice_activity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Standard_A1_Activity"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/item_choice_activity_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:clickable="false"/>

            <TextView
                android:id="@+id/item_choice_activity_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_choice_activity_text"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="taskAffinity=value"
                android:textSize="12sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>